{
  "name": "sneaker-city-be",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean:dist && npm run build-server",
    "start": "node ./dist/index.js",
    "dev": "NODE_ENV=development nodemon --exec babel-node ./src/index.js",
    "test": "NODE_ENV=test jest --collect-coverage --detectOpenHandles",
    "coveralls": "NODE_ENV=test jest --coverage && cat ./coverage/lcov.info | coveralls",
    "clean:dist": "rm -rf dist && mkdir dist",
    "build-server": "babel -d ./dist ./src",
    "lint": "eslint . --fix --max-warnings=1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NkFab/skeaker-city-be.git"
  },
  "author": "Manzi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NkFab/skeaker-city-be/issues"
  },
  "homepage": "https://github.com/NkFab/skeaker-city-be#readme",
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "@hapi/joi": "^17.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.8.0",
    "coveralls": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "^4.2.3",
    "jest": "^24.8.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "supertest": "^4.0.2"
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "eslint src/ --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
